<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

<link rel="stylesheet" href="/signup.css">
<div>
    <h1 class="headings">Sign up page</h1>
    <% if(message.length> 0 ){%>
        <div class="alert alert-danger" role="alert">
            <%=message%>
        </div>
        <%}%>
            <form action='/signup' method="POST">
                <table class="form-login">
                    <tr>
                        <td>Full Name</td>
                        <td><input type="text" name="fullname" required maxlength="20" minlength="3"
                                placeholder="Enter your Full Name"></td>

                    </tr>
                    <tr>
                        <td>Email Id</td>
                        <td><input type="text" name="email" required maxlength=40 minlength=10
                                placeholder="Enter your Email Id">
                        </td>

                    </tr>
                    <tr>
                        <td>Department</td>
                        <td><select name="department" required placeholder="Enter your Department Name">--Select--
                            <option value="">-- choose one --</option>    
                            <option value="Mobility">Mobility</option>
                                <option value="Web Application Development">Web App Development
                                </option>
                                <option value="Cloud Solution">Cloud Solution</option>
                                <option value="Product Engineering">Product Engineering</option>
                                <option value="Devops">Devops</option>
                                <option value="UI/UX">UI/UX</option>

                            </select>
                        </td>


                    </tr>
                    <tr>
                        <td>Password</td>
                        <td><input type="password" name="password" minlength="8" maxlength="15" required
                                placeholder="Enter your Password"></td>

                    </tr>

                    <tr>
                        <td><button type="reset" name="reset">Reset</button></td>
                        <td><button type="signup" name="signup">Sign Up</button></td>
                    </tr>
                </table><br />
                <a href="login">alerady have an account ? Log In</a>
            </form>
</div>